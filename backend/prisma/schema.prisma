generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model IdGenerator {
  collectionName String @id @map("_id")
  id             Int
}

model User {
  mid     String   @id @default(auto()) @map("_id") @db.ObjectId
  id      Int?     @unique
  email   String   @unique
  name    String
  pass    String?  @default("mudar123")
  phone   String?
  login   String?
  role    Role?
  storeId String?
  active  Boolean? @default(true)

  architects    Architect[]
  managerStores Store[]
}

model Store {
  mid       String  @id @default(auto()) @map("_id") @db.ObjectId
  id        Int?    @unique
  name      String
  email     String  @unique
  address   String?
  phone     String?
  obs       String?
  managerId String? @db.ObjectId

  manager User? @relation(fields: [managerId], references: [mid])
}

model Architect {
  mid        String    @id @default(auto()) @map("_id") @db.ObjectId
  id         Int?      @unique
  name       String
  nameFilter String?
  cpf        String?
  birthday   DateTime?
  email      String?   @unique
  address    String?
  phone      String?
  obs        String?
  active     Boolean?  @default(true)
  sellerId   String?   @db.ObjectId

  seller  User?    @relation(fields: [sellerId], references: [mid])
  clients Client[]
}

model Client {
  mid              String             @id @default(auto()) @map("_id") @db.ObjectId
  id               Int?               @unique
  name             String
  nameFilter       String?
  cpf              String?
  rg               String?
  birthday         DateTime?
  occupation       String?
  email            String?
  address          String?
  phone            String?
  obs              String?
  active           Boolean?           @default(true)
  interestProducts InterestProduct[]
  origins          Origin[]
  createdAt        DateTime           @default(now())
  architectId      String?            @db.ObjectId

  architect Architect? @relation(fields: [architectId], references: [mid])
}

model Supplier {
  mid        String   @id @default(auto()) @map("_id") @db.ObjectId
  id         Int?     @unique
  name       String
  nameFilter String?
  cnpj       String?  @unique
  im         String?
  ie         String?
  email      String?
  address    String?
  phone      String?
  obs        String?
  active     Boolean? @default(true)

  product Product[]
}

model Product {
  mid               String   @id @default(auto()) @map("_id") @db.ObjectId
  id                Int?     @unique
  name              String
  fantasyName       String   @unique
  nameFilter        String
  ezID              Int?
  ref               String?
  ncm               String?
  cst               String?
  ean               String?
  buyBrice          Int?
  sellPrice         Int?
  hasSeals          Boolean?
  amountStart       Int?
  amountSold        Int?
  isAmountUnlimited Boolean  @default(false)
  supplierId        String?  @db.ObjectId

  supplier    Supplier?         @relation(fields: [supplierId], references: [mid])
  descriptors ProductDescritors
}

model Descriptor {
  mid   String @id @default(auto()) @map("_id") @db.ObjectId
  type  String
  value String
}

type ProductDescritors {
  category String?
  unit     String?
  colord   String?
  size     String?
  design   String?
  shape    String?
  origin   String?
  model    String?
  height   String?
}

enum Role {
  ADMIN
  MANAGER
  SALES
  OPERATIONAL
  FINANCE
}

enum Origin {
  friends
  architect
  internet
  relatives
  radio
  socialNetwork
  tv
}

enum InterestProduct {
  cushion
  carpet
  curtain
  mirror
  others
  wallpaper
  blind
  floor
  mat
  awning
}
